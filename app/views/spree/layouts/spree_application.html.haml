%head{"data-hook" => "inside_head"}
  = render partial: 'spree/shared/head'
  = stylesheet_link_tag    'application', media: 'all'
  = javascript_include_tag 'application'
%body{:class => body_class, "data-hook" => "body", :id => @body_id || 'default'}
  = render partial: 'spree/shared/google_analytics.js'
  = render partial: 'spree/shared/header'
  %main.main-content
    -#= render partial: 'shared/slider' if store_block? && slider_block?
    - unless %w(home).include?(controller_name)
      %section#breadcrumbs
        .container.breadcrumbs-wrap
          = breadcrumbs(@taxon)
    - if controller_name == 'home'
      = yield
    - else
      %section.columns-container#columns
        .container
          .row{"data-hook" => ""}
            #content{:class => !content_for?(:sidebar) ? "col-sm-12" : "col-sm-8 col-md-9", "data-hook" => ""}
              = flash_messages
              = yield
            = render partial: 'spree/shared/sidebar' if content_for? :sidebar
  = yield :templates
  = render partial: 'spree/shared/footer'
  = render partial: 'shared/youtube_popup', locals: {videos: @videos}
