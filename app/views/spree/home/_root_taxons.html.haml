#center_column.center_column
  %h4.title_block_home.page-subheading browse categories
  .content_scene_cat
    .content_scene_cat_bg.clearfix.row
      - taxon_roots = Spree::Taxon.roots
      - cache(["taxon-roots", taxon_roots.maximum(:updated_at).to_i].join('-')) do
        - taxon_roots.each do |taxon_root|
          -#= link_to taxon_root.name, seo_url(taxon_root)
          - taxon_root.children.show_on_home.each do |taxon|
            .img_category.col-md-4.col-sm-4
              = link_to seo_url(taxon) do
                %img.img-responsive{alt: taxon.name, src: taxon.icon.url(:home)}/
              .title_img_category
                %p= taxon.name
