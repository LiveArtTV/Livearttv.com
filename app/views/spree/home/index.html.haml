.landing-page
  -#- content_for :sidebar do
    %div{"data-hook" => "homepage_sidebar_navigation"}
      = render :partial => 'spree/shared/taxonomies'
  -# if video_link
  -#%section.video
    .container
      -#- cache %w(product-videos, all) do
        / 16:9 aspect ratio
      .row
        .col-md-12#product-videos
          -#.embed-responsive.embed-responsive-16by9.spree-embed-video= render 'spree/products/video_player', :video => video_link
  %section.root-taxons.carousel-section
    .carousel_title.clearfix
      %h1 BECOME A MEMBER & RECEIVE 10% OFF YOUR ENTIRE ORDER!
    #myCarousel.carousel.slide{"data-ride" => "carousel", "data-interval" => "100000"}
      / Indicators
      -#%ol.carousel-indicators
        %li.active{"data-slide-to" => "n", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
      / Wrapper for slides
      .carousel-inner
        - Spree::Image.first(10).each_with_index do |image, i|
          - if i == 0
            .item.active
              .embed-responsive.embed-responsive-16by9
                %img{:alt => image.alt, :src => image.attachment.url(:original)}
          - else
            .item
              .embed-responsive.embed-responsive-16by9
                %img{:alt => image.alt, :src => image.attachment.url(:original)}

      / Left and right controls
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
        %span.glyphicon.glyphicon-chevron-left
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
        %span.glyphicon.glyphicon-chevron-right
        %span.sr-only Next
    .carousel_subtitle
      %h2 Watch us live!
      %h3 ROKU Channel 322 - APPLE TV Channel 322 - GOOGLE TV Channel 322 - AMAZON FIRE TV Channel 322

    /Uncomment, when would be necessary to add video thumbnails below video
    / %section.video-thumbnails
    /   .text-center
    /     .container
    /       = render partial: 'spree/home/video_thumbnails', locals: { videos: @videos }

  %section.root-taxons.clearfix
    = render partial: 'root_taxons'

