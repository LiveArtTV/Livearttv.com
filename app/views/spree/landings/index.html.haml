.landing-page
  -#- content_for :sidebar do
    %div{"data-hook" => "homepage_sidebar_navigation"}
      = render :partial => 'spree/shared/taxonomies'
  -# if video_link
  -#%section.video
    .container
      -#- cache %w(product-videos, all) do
        / 16:9 aspect ratio
      .row
        .col-md-12#product-videos
          -#.embed-responsive.embed-responsive-16by9.spree-embed-video= render 'spree/products/video_player', :video => video_link
  %section.root-taxons.carousel-section
    .container
      .carousel_title.clearfix
        %h1.h3 BECOME A MEMBER & RECEIVE 10% OFF YOUR ENTIRE ORDER!
      #myCarousel.carousel.slide{"data-ride" => "carousel", "data-interval" => "10000"}
        / Indicators
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
          %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
          %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
          %li{"data-slide-to" => "3", "data-target" => "#myCarousel"}
          %li{"data-slide-to" => "4", "data-target" => "#myCarousel"}
          %li{"data-slide-to" => "5", "data-target" => "#myCarousel"}
          %li{"data-slide-to" => "6", "data-target" => "#myCarousel"}
        / Wrapper for slides
        .carousel-inner
          .item.active
            .embed-responsive.embed-responsive-16by9
              = image_tag('carousel/Dali.jpg', alt: 'Dali')

          .item
            .embed-responsive.embed-responsive-16by9

              = image_tag('carousel/Delvecchio.jpg', alt: 'Delvecchio')
          .item
            .embed-responsive.embed-responsive-16by9

              = image_tag('carousel/DiChirico.jpg', alt: 'DiChirico')
          .item
            .embed-responsive.embed-responsive-16by9

              = image_tag('carousel/DSC.jpg', alt: 'DSC')
          .item
            .embed-responsive.embed-responsive-16by9

              = image_tag('carousel/Manera.jpg', alt: 'Manera')
          .item
            .embed-responsive.embed-responsive-16by9

              = image_tag('carousel/MG.jpg', alt: 'MG')
          .item
            .embed-responsive.embed-responsive-16by9
    
              = image_tag('carousel/Pink.jpg', alt: 'Pink')

        / Left and right controls
        %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
          %span.glyphicon.glyphicon-chevron-left
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
          %span.glyphicon.glyphicon-chevron-right
          %span.sr-only Next
      .carousel_subtitle
        %h2 Watch us live!
        %h3 ROKU Channel - APPLE TV Channel - GOOGLE TV Channel - AMAZON FIRE TV Channel

    /Uncomment, when would be necessary to add video thumbnails below video
    / %section.video-thumbnails
    /   .text-center
    /     .container
    /       = render partial: 'spree/home/video_thumbnails', locals: { videos: @videos }

  %section.root-taxons.clearfix
    .container
      = render partial: 'root_taxons'

  -#%section#columns.columns-container{"data-hook" => "homepage_products"}
    .block-title-productlist.text-center
      .container
        %h4.title_block_home.page-subheading
          popular in store
        .block_des_home
          %p.des_productlist.block_des_home
            Claritas est etiam processus dynamicus, qui sequitur mutationem
            consuetudium lectorum. Mirum est notare quam littera gothica putamus panteposuerit litterarum formas
            humanitatis
    - cache(cache_key_for_products) do
      = render :partial => 'spree/shared/products', :locals => { :products => @products }
  -#%section.block-home-banner.container-fluid
    .row
      .widget-banner.block
        .block_content
          .image-box
            .img-banner.effect
              %a{:href => "!#"}
                %img.img-responsive{:alt => "Adv Banner", :src => "./ap_rojo_files/home_banner.png"}/
            .des_banner_home
              .container
                .row
                  .content_baner_home.text-center
                    .text_first top wanted items of year
                    %h3.title_banner_home.title_block_home mega discount
                    %p
                      Claritas est etiam processus dynamicus, qui sequitur mutationem consuetudium lectorum. Mirum est
                      notare quam littera gothica putamus panteposuerit litterarum formas humanitatis
  -#%section.home_product_list_2
    .text-center
      .container
        %h4.title_block_home.page-subheading
          Recently Added Items
        - cache(cache_key_for_products) do
          = render :partial => 'spree/shared/products', :locals => {slider: true, products: @products.last(40) }
  %section.root-subscribe
    .container
      %h2 BECOME A MEMBER & RECEIVE 10% OFF YOUR ENTIRE ORDER!
      .row
